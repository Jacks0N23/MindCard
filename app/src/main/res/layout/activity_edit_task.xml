<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarPlanEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/taskTitleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/WhiteHint">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="textCapSentences|textMultiLine"
                android:textSize="22sp"
                android:theme="@style/WhiteUnderline"
                tools:text="очень длинное тестовое название" />
        </android.support.design.widget.TextInputLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_send"
        app:fabSize="normal"
        app:layout_anchor="@id/appbarPlanEdit"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_constraintBottom_toBottomOf="@+id/appbarPlanEdit"
        app:layout_constraintEnd_toEndOf="@+id/appbarPlanEdit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarPlanEdit" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/descriptionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveTask">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/description"
            android:inputType="textCapSentences|textMultiLine"
            android:textSize="16sp"
            tools:text="description" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/taskColorContainer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="@string/pick_color"
            tools:ignore="RelativeOverlap" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/taskColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/from_date_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/due_date_rel_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskColorContainer">

        <ImageView
            android:id="@+id/add_from_date_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_schedule_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_from_date_img"
            android:layout_alignStart="@+id/add_from_date_img"
            android:layout_alignLeft="@+id/add_from_date_img"
            android:paddingLeft="5dp"
            android:text="@string/from" />

        <TextView
            android:id="@+id/dateFrom"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/add_from_date_img"
            android:gravity="start"
            android:hint="@string/date"
            android:src="@drawable/ic_schedule_black" />

        <TextView
            android:id="@+id/timeFrom"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_from_date_img"
            android:layout_alignStart="@+id/dateFrom"
            android:layout_alignLeft="@+id/dateFrom"
            android:layout_alignEnd="@+id/dateFrom"
            android:layout_alignRight="@+id/dateFrom"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:hint="@string/time"
            android:textColorHint="@color/hint_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/due_date_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_date_rel_layout">

        <ImageView
            android:id="@+id/add_due_date_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_schedule_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/add_due_date_img"
            android:layout_alignLeft="@+id/add_due_date_img"
            android:layout_alignTop="@+id/timeDue"
            android:paddingLeft="6dp"
            android:text="@string/due" />

        <TextView
            android:id="@+id/dateDue"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/add_due_date_img"
            android:gravity="start"
            android:hint="@string/date"
            android:textColorHint="@color/hint_color" />

        <TextView
            android:id="@+id/timeDue"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_due_date_img"
            android:layout_alignStart="@+id/dateDue"
            android:layout_alignLeft="@+id/dateDue"
            android:layout_alignEnd="@+id/dateDue"
            android:layout_alignRight="@+id/dateDue"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:hint="@string/time"
            android:textColorHint="@color/hint_color" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>